  <animation>
    <type>translate</type>
    <object-name>GI_Switch</object-name>
    <property>instrumentation/gear-indicator/brightness-pos-norm</property>
    <interpolation>
      <entry><ind>0.1</ind><dep>0.0</dep></entry>
      <entry><ind>1.0</ind><dep>0.009</dep></entry>
    </interpolation>
    <axis>
      <x>0.0</x>
      <y>1</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>GI_Switch</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/gear-indicator/brightness-cmd-norm</property>
        <factor>0.9</factor>
        <min>0.1</min>
        <max>1.0</max>
      </binding>
      <binding>
        <command>property-interpolate</command>
        <property>instrumentation/gear-indicator/brightness-pos-norm</property>
        <property>instrumentation/gear-indicator/brightness-cmd-norm</property>
        <time>0.1</time>
      </binding>
      <binding>
        <command>nasal</command>
        <script>MIG15BIS.clicksound();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>GI_BCheck</object-name>
    <property>instrumentation/gear-indicator/button-check/switch-pos-norm</property>
    <factor>0.004</factor>
    <axis>
      <x>-1</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>GI_BCheck</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/gear-indicator/button-check/target-pos-norm</property>
        <value>1</value>
      </binding>
      <binding>
        <command>property-interpolate</command>
        <property>instrumentation/gear-indicator/button-check/switch-pos-norm</property>
        <property>instrumentation/gear-indicator/button-check/target-pos-norm</property>
        <time>0.1</time>
      </binding>
      <binding>
        <command>nasal</command>
        <script>MIG15BIS.clicksound();</script>
      </binding>
     <mod-up>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/gear-indicator/button-check/target-pos-norm</property>
        <value>0</value>
      </binding>
      <binding>
        <command>property-interpolate</command>
        <property>instrumentation/gear-indicator/button-check/switch-pos-norm</property>
        <property>instrumentation/gear-indicator/button-check/target-pos-norm</property>
        <time>0.1</time>
      </binding>
     </mod-up>
    </action>
  </animation>

</PropertyList> 
