  <animation>
    <type>material</type>
    <object-name>GI_MUBackplate</object-name>
    <condition>
      <and>
        <greater-than>
          <property>systems/electrical-real/bus</property>
          <value>0.9</value>
        </greater-than>
        <or>
          <equals>
            <property>fdm/jsbsim/gear/unit[0]/pos-norm-real</property>
            <value>0</value>
          </equals>
          <equals>
            <property>instrumentation/gear-indicator/button-check/switch-pos-norm</property>
            <value>1</value>
          </equals>
        </or>
        <not>
          <property>fdm/jsbsim/gear/unit[0]/torn</property>
        </not>
      </and>
    </condition>
    <emission>
      <factor-prop>instrumentation/gear-indicator/brightness-pos-norm</factor-prop>
      <red>0.9</red>
      <green>0.1</green>
      <blue>0.1</blue>
    </emission>
  </animation>

