<?xml version="1.0"?>
<PropertyList>
  <path>MiG-15bis-Gearvalvepressuremeter.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>GVPM_Glass</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/MiG-15/Models/Effects/instruments2</inherits-from>
    <object-name>GVPM_Needle</object-name>
    <object-name>GVPM_Backplate</object-name>
  </effect>

  <animation>
    <type>rotate</type>
    <object-name>GVPM_Needle</object-name>
    <property>fdm/jsbsim/systems/gearvalve/pressure-indicated</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>60.0</dep></entry>
      <entry><ind>1.0</ind><dep>300.0</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

</PropertyList>
