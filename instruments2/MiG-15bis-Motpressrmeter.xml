<?xml version="1.0"?>
<PropertyList>
  <path>MiG-15bis-Motpressmeter.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>MP_Glass</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/MiG-15/Models/Effects/instruments2</inherits-from>
    <object-name>MP_Needle</object-name>
    <object-name>MP_Backplate</object-name>
  </effect>

  <animation>
    <type>rotate</type>
    <object-name>MP_Needle</object-name>
    <property>fdm/jsbsim/systems/instr/EM-10/gauge/fuel-pressure-kgf_cm2</property>
    <factor>2.5</factor>
    <offset-deg>22.0</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
