<?xml version="1.0"?>
<PropertyList>
  <path>MiG-15bis-Motormeter.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Mot_Glass</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/MiG-15/Models/Effects/instruments2</inherits-from>
    <object-name>Mot_Needle</object-name>
    <object-name>Mot_LNeedle</object-name>
    <object-name>Mot_RNeedle</object-name>
    <object-name>Mot_Bezel</object-name>
    <object-name>Mot_Backplate</object-name>
  </effect>

  <animation>
    <type>rotate</type>
    <object-name>Mot_Needle</object-name>
    <property>fdm/jsbsim/systems/instr/EMI-3R/gauge/fuel-pressure-kgf_cm2</property>
    <factor>2.7</factor>
    <offset-deg>45.0</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.008</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Mot_LNeedle</object-name>
    <property>fdm/jsbsim/systems/instr/EMI-3R/gauge/oil-pressure-kgf_cm2</property>
    <factor>13.5</factor>
    <offset-deg>15.0</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>-0.018713</y-m>
      <z-m>-0.012073</z-m>
    </center>  
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Mot_RNeedle</object-name>
    <property>fdm/jsbsim/systems/instr/EMI-3R/gauge/oil-temperature-degC</property>
    <factor>0.715</factor>
    <offset-deg>35.75</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0.01791</y-m>
      <z-m>-0.012073</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
