</equals>
</condition>
</animation>

  -->

  <animation>
    <type>rotate</type>
    <object-name>GC_MDisk</object-name>
    <object-name>GC_Needle</object-name>
    <object-name>GC_CDisk</object-name>
    <property>fdm/jsbsim/systems/instr/DGMK-3/pot/heading-bug-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>GC_MDisk</object-name>
    <object-name>GC_Needle</object-name>
    <property>fdm/jsbsim/systems/instr/DGMK-3/gauge/heading-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>GC_Vern</object-name>
    <property>fdm/jsbsim/systems/instr/DGMK-3/pot/heading-bug-deg</property>
    <factor>10</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.05334</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/DGMK-3/pot/heading-bug-deg</property>
        <factor>1</factor>
        <min>0</min>
        <max>360</max>
        <wrap>true</wrap>
      </binding>
    </action>
  </animation>

</PropertyList> 
