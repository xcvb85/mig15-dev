  <animation>
    <type>rotate</type>
    <object-name>TM_Ball</object-name>
    <property>fdm/jsbsim/systems/instr/AGI-1/gauge/ball-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.180</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TM_Needle</object-name>
    <property>fdm/jsbsim/systems/instr/EUP-46/gauge/yaw-rate-needledeg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.029</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList> 
